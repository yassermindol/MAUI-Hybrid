

<h3>DailyBlazorPage</h3>

<ul class="list-group">
    @foreach (var item in Items)
    {
        <li class="list-group-item" style="padding-left:0px;padding-right:0;" @key="item.Id">
            <!--
            <div class="d-flex justify-content-between align-items-center" @onclick="() => Toggle(item.Id)" style="cursor: pointer;">
                <span style="padding-left:12px;">@item.Title</span>
                <span class="badge bg-secondary">@((item.IsExpanded) ? "−" : "+")</span>
            </div>
            -->

            <div style="display:flex; flex-direction:row; align-items:center; margin-left:10px;margin-right:10px;" @onclick="() => Toggle(item.Id)">
                <div style="display:flex; flex-direction:column; flex:1; cursor:pointer;margin-right:10px;">
                    <div style="display:flex; flex-direction:row;">
                        <label style="margin-bottom:4px;font-size:14px;font-weight:600;">@item.Title</label>
                        <label style="margin-left:auto;margin-right:8px;font-size:14px;font-weight:600;">P 64</label>
                    </div>
                    <div style="background-color:blue; height:6px; width:100%;margin-bottom:4px;"></div>
                </div>
                <span class="badge bg-secondary">
                    @((item.IsExpanded) ? "−" : "+")
                </span>
            </div>

            @if (item.IsExpanded && item.SubItems?.Any() == true)
            {
                <ul class="list-group mt-2">
                    @foreach (var sub in item.SubItems)
                    {
                        <li class="list-group-item list-group-item-action" style="padding-left:10px;padding-right:10px;">
                            <div style="display:flex; flex-direction:column; flex:1; cursor:pointer;">
                                <div style="display:flex; flex-direction:row;flex:1;">
                                    <label style="margin-bottom:4px;font-size:14px;font-weight:500;">@sub</label>
                                    <label style="margin-left:auto;margin-right:8px;font-size:14px;">P 64</label>
                                </div>
                                <div style="display:flex; flex-direction:row;flex:1;padding:0px;">
                                    <label style="
                                                    margin-right:10px;
                                                    flex:1;
                                                    overflow:hidden;
                                                    display:-webkit-box;
                                                    -webkit-box-orient:vertical;
                                                    -webkit-line-clamp:2;
                                                    line-height:1.2em;
                                                    font-size:14px;
                                                    text-overflow:ellipsis;">
                                        This is a long label.
                                    </label>
                                    <label style="margin-left:auto;margin-right:8px;font-size:14px;">Today 5:06 PM</label>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
        </li>
    }
</ul>

