<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ExpenseTracker.Features.Settings.RestoreExpensePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ExpenseTracker.Converters"
    xmlns:templates="clr-namespace:ExpenseTracker.Features.Templates"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="ThisPage"
    Title="Restore Deleted Expenses">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Spacing="0">
            <ActivityIndicator IsVisible="{Binding IsBusy}" VerticalOptions="CenterAndExpand" />
            <Label
                HorizontalOptions="Center"
                IsVisible="{Binding IsNoDeletedExpensesToShowVisible}"
                Text="No deleted expenses to restore."
                VerticalOptions="CenterAndExpand" />
            <StackLayout
                BackgroundColor="{DynamicResource PrimaryBackgroundColor}"
                IsVisible="{Binding IsRestoreControlsVisible}"
                VerticalOptions="FillAndExpand">

                <ListView
                    ItemsSource="{Binding DeletedExpenses, Mode=TwoWay}"
                    RowHeight="55"
                    SelectedItem="{Binding SelectedItem}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Category}" />
                                                <Span Text="&#10;" />
                                                <Span Text="{Binding Note}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        HorizontalOptions="End"
                                        HorizontalTextAlignment="End"
                                        VerticalOptions="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontAttributes="Bold" Text="{Binding CurrencySymbol}" />
                                                <Span Text=" "/>
                                                <Span FontAttributes="Bold" Text="{Binding Amount}" />
                                                <Span Text="&#10;" />
                                                <Span Text="{Binding Date}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <CheckBox
                                        Grid.Column="2"
                                        Margin="10,0,10,0"
                                        IsChecked="{Binding IsChecked, Mode=TwoWay}">
                                        <CheckBox.Behaviors>
                                            <toolkit:EventToCommandBehavior
                                                Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.ItemCheckBoxTappedCommand}"
                                                CommandParameter="{Binding .}"
                                                EventName="CheckedChanged" />
                                        </CheckBox.Behaviors>
                                    </CheckBox>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <StackLayout
                HeightRequest="50"
                IsVisible="{Binding IsRestoreControlsVisible}"
                Orientation="Horizontal"
                Spacing="0">
                <Label
                    Margin="60,0,0,0"
                    HorizontalOptions="Start"
                    Text="Select All"
                    VerticalOptions="Center" />
                <CheckBox
                    x:Name="SelectAllCheckBox"
                    HorizontalOptions="StartAndExpand"
                    IsChecked="{Binding IsSelectAllChecked, Mode=TwoWay}">
                    <CheckBox.Behaviors>
                        <toolkit:EventToCommandBehavior
                            Command="{Binding SelectAllCheckBoxTappedCommand}"
                            CommandParameter="{Binding Source={x:Reference SelectAllCheckBox}, Path=IsChecked}"
                            EventName="CheckedChanged" />
                    </CheckBox.Behaviors>
                </CheckBox>
                <Image
                    Margin="0,0,60,0"
                    HeightRequest="27"
                    HorizontalOptions="End"
                    Source="{AppThemeBinding Light=ic_restore,
                                             Dark=ic_restore_white}">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RestoreCommand}" NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>