<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpenseTracker.Features.Main.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:daily="clr-namespace:ExpenseTracker.Features.Daily"
    xmlns:dateRange="clr-namespace:ExpenseTracker.Features.DateRange"
    xmlns:home="clr-namespace:ExpenseTracker.Features.Home"
    xmlns:localize="clr-namespace:ExpenseTracker.Resources.Localization"
    xmlns:monthly="clr-namespace:ExpenseTracker.Features.Monthly"
    xmlns:settings="clr-namespace:ExpenseTracker.Features.Settings"
    xmlns:test="clr-namespace:ExpenseTracker.Features.Test"
    xmlns:weekly="clr-namespace:ExpenseTracker.Features.Weekly"
    Shell.FlyoutBackdrop="Gray"
    Shell.NavBarHasShadow="True"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=Black}">
    <!--
        Shell.TabBarBackgroundColor="White"
    -->

    <Tab Title="Home" Icon="ic_home.png">
        <ShellContent ContentTemplate="{DataTemplate home:HomePageV2}" />
    </Tab>
    <Tab Title="Daily" Icon="ic_day.png">
        <ShellContent ContentTemplate="{DataTemplate daily:DailyPage}" />
    </Tab>

    <Tab Title="{localize:Translate Weekly}" Icon="ic_week.png">
        <ShellContent Title="{localize:Translate WeeksInMonth}" ContentTemplate="{DataTemplate weekly:WeeksInMonthPage}" />
        <ShellContent Title="{localize:Translate WeeksInYear}" ContentTemplate="{DataTemplate weekly:WeeksInYearPage}" />
    </Tab>

    <Tab Title="Monthly" Icon="ic_month.png">
        <ShellContent ContentTemplate="{DataTemplate monthly:MonthlyPage}" />
    </Tab>
    <Tab Title="Range" Icon="ic_span.png">
        <ShellContent ContentTemplate="{DataTemplate dateRange:DateRangePage}" />
    </Tab>

    <Tab Title="Setting" Icon="ic_settings.png">
        <ShellContent ContentTemplate="{DataTemplate settings:SettingsPage}" />
    </Tab>

