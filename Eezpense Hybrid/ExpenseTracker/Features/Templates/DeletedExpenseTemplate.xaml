<?xml version="1.0" encoding="utf-8" ?>

<!--
    Diko na nagamit ito dahil yung checkbox check chnage event ay hindi matrigger sa calling page. Kaya directly sinulat nalang ito sa RestoreExpensesPage.
-->
<ViewCell
    x:Class="ExpenseTracker.Features.Templates.DeletedExpenseTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ViewCell.View>
        <Grid
            BackgroundColor="{Binding BackgroundColor}"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalOptions="Start"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="{Binding Category}" />
                        <Span Text="&#10;" />
                        <Span Text="{Binding Note}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label
                Grid.Column="1"
                Margin="0,0,10,0"
                HorizontalOptions="End"
                HorizontalTextAlignment="End"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontAttributes="Bold" Text="{Binding CurrencySymbol}" />
                        <Span FontAttributes="Bold" Text="{Binding Amount}" />
                        <Span Text="&#10;" />
                        <Span Text="{Binding Date}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <CheckBox
                Grid.Column="2"
                Margin="10,0,10,0"
                IsChecked="{Binding IsChecked}">
                <CheckBox.Behaviors>
                    <toolkit:EventToCommandBehavior
                        Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.ItemCheckBoxTappedCommand}"
                        CommandParameter="{Binding .}"
                        EventName="CheckedChanged" />
                </CheckBox.Behaviors>
            </CheckBox>
        </Grid>
    </ViewCell.View>
</ViewCell>
