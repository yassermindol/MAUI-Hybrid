<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ExpenseTracker.Features.Templates.ExpenseHeaderTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <HorizontalStackLayout
        BackgroundColor="{AppThemeBinding Light=LightSteelBlue,
                                          Dark=MidnightBlue}"
        HeightRequest="35"
        VerticalOptions="CenterAndExpand">
        <Label
            Margin="10,0,0,0"
            FontAttributes="Bold"
            VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span FontAttributes="Bold" Text="{Binding Category}" />
                    <Span Text=":  " />
                    <Span FontAttributes="Bold" Text="{Binding CurrencySymbol}" />
                    <Span Text=" " />
                    <Span FontAttributes="Bold" Text="{Binding CategoryTotalStr}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </HorizontalStackLayout>

</ContentView>
