@page "/maui-style-button"

<style>
    .maui-button {
        background-color: #f2f2f2 !important; /* light gray */
        border: 1px solid #c8c8c8 !important;
        color: #1a1a1a !important; /* text color */
        border-radius: 6px !important;
        padding: 8px 14px !important;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
        font-size: 14px;
        line-height: 1;
        cursor: pointer;
        box-shadow: none !important;
        transition: background-color 150ms ease, border-color 150ms ease;
    }

        .maui-button:hover {
            background-color: #e6e6e6 !important;
            border-color: #bdbdbd !important;
        }

        .maui-button:active {
            background-color: #e0e0e0 !important;
            border-color: #b0b0b0 !important;
            transform: translateY(1px);
        }

        .maui-button:focus-visible {
            outline: 2px solid #5c9ded;
            outline-offset: 2px;
        }
</style>

<h3>MAUI-style Button (Blazor)</h3>

<button class="maui-button" @onclick="SayHello">Tap me</button>

@code {
    private void SayHello()
    {
        Console.WriteLine("MAUI-style button clicked!");
    }
}